<div class="col-lg-12 col-md-12 list-group-item" >
    <table class="table table table-striped table-hover">
        <thead class="thead-inverse">
            <tr>
                @*<th>@Html.DisplayNameFor(m => m.Id)</th>*@
                <th>@Html.DisplayNameFor(m => m.Nama)</th>
                <th>@Html.DisplayNameFor(m => m.Harga)</th>
                <th>@Html.DisplayNameFor(m => m.TanggalBid)</th>
                <th>@Html.DisplayNameFor(m => m.BatasBid)</th>
                @*<th>Keterangan</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>@Html.DisplayFor(m => item.Id)</td>*@
                    <td>@Html.DisplayFor(m => item.Nama)</td>
                    <td>@Html.DisplayFor(m => item.Harga)</td>
                    <td>
                        <span class="hidden-xs">@item.TanggalBid.ToString("dd/MM/yyyy")</span>
                        <span class="hidden-sm hidden-md hidden-lg">@item.BatasBid.ToString("dd/MM/yyyy")</span>
                    </td>
                    <td>
                        <span class="hidden-xs">@item.BatasBid.ToString("MM/dd/yyyy")</span>
                        <span class="hidden-sm hidden-md hidden-lg">@item.BatasBid.ToString("MM/dd/yyyy")</span>
                    </td>
                    @*<td>
                            @Html.ActionLink("Edit", "EditBid", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "DeleteBid", new { id = item.Id })
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>

