@helper GetUserAccountButtonVisibility()
{
    if ((string)ViewContext.RouteData.Values["controller"] == "Home" &&  // nama kontroller /root confiq
        (string)ViewContext.RouteData.Values["action"] == "Index")
    {
            <text>hidden</text>
    }
    else
    {
            <text>visible</text>
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Auction Foundation</title>
    <link href="~/Content/site.css" rel="stylesheet" type="text/css" />
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*light style="background-color:aquamarine;   style="background-color:aquamarine;border-color:aquamarine""*@
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top mr-auto "  >
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Auction Foundation", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav mr-auto">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                    @*<li>@Html.ActionLink("Akun User", )</li>*@
                </ul>

                <ul class="nav navbar-nav navbar-right mr-auto" >
                    <li>
                        <a href="@Url.Action("Contact", "Home")" style="visibility: @GetUserAccountButtonVisibility()"
                           >
                            <span class="glyphicon glyphicon-dashboard"></span> Dashboard
                        </a>
                    </li>
                    <li></li>
                    <li>
                        <a href="@Url.Action("Index", "Home")" style="visibility: @GetUserAccountButtonVisibility()"
                           >
                            <span class="glyphicon glyphicon-log-out"></span> Logout
                            @*class="btn btn-group-sm btn-info navbar-btn"*@
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <br />
        <br />
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Auction Foundation</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @* Untuk date picker *@
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <link href="~/Scripts/bootstrap-datepicker3.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script><script>
        $('.datepicker').datepicker(
            {
                format: 'dd/mm/yyyy'
            }
        );
    </script>

    @*<script src="~/Scripts/jquery.countdown.js"></script>
    <script src="~/Scripts/jquery.countdown.min.js"></script>*@


    @*  *@
    
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script src="~/Scripts/countdown.js"></script>   
    
    <script>

        $(document).ready(function () {
            $("#countdown").countdown({
                date: "19 July 2017 12:00:00",
                format: "on"
            },

                function () {
                });

            $("#b").click(function () {

            });
        });
    </script>

</body>
</html>
