@model Auction2.Models.LoginUser
@{
    ViewBag.Title = "Home Page";
}

<br />
@using (Html.BeginForm())
{
<div class="container mx-auto">
    <div class="row">
        <div class="col-md-3">
        </div>

        <div class="col-md-6 list-group-item" style="background-color:darkcyan">
            <form>
                <br />
                <div class="form-group row">
                    <div class="col-sm-12">
                        <fieldset>
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @if (@ViewBag.Message != null)
                            {
                                <div style="border: 1px solid red">
                                    @ViewBag.Message
                                </div>
                            }

                            <div class="form-group row">
                                <div class="col-sm-12" >
                                    @Html.LabelFor(a => a.Nama, new { @class = "col-md-2 control-label"})
                                    @Html.TextBoxFor(a => a.Nama, new { @class = "form-control", placeholder = "Input Nama" })
                                    @Html.ValidationMessageFor(a => a.Nama)
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-12">
                                    @Html.LabelFor(a => a.Pswd, new { @class = "col-md-2 control-label" })
                                    @Html.PasswordFor(a => a.Pswd, new { @class = "form-control", placeholder = "Input Password" })
                                    @Html.ValidationMessageFor(a => a.Pswd)
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-offset-2 col-md-10">
                                    <button type="submit" class="btn btn-success btn-md margin-right " value="Create">
                                        <span class="glyphicon glyphicon-log-in"></span> Login
                                    </button>
                                    <a href="@Url.Action("Register", "Home")"
                                       class="btn btn-warning navbar-btn">
                                        <span class="glyphicon glyphicon-save"></span> Create New Member
                                    </a>

                                    @* @Html.ActionLink("Create New Member", "Register", null, new { @class = "btn btn-warning btn-md" })*@
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </form>
            @*<p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>*@
        </div>

        <div class="col-md-3">
        </div>
    </div>
</div>

}







