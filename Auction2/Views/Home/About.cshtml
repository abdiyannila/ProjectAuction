@model IEnumerable<Auction2.Models.BidUserModel>

@using Auction2.Models
@{
    ViewBag.Title = "About";
}

@*<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>*@
@*<p>Use this area to provide additional information.</p>*@

<h3>Daftar Bid </h3>


@using (Html.BeginForm())
{
   
    <table>
        <div class="form-group row">
            <div class="col-sm-10">
                @Html.Label("Nama Peserta Bid : ")
                @Html.TextBox("SearchString")
                <button type="submit" class="btn btn-success btn-sm margin-right " value="Create">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
            </div>
        </div>
        
    </table>

   <table class="table">
       <thead class="thead-inverse">
           <tr>
               @*<th>@Html.DisplayNameFor(m => m.Id)</th>*@
               <th>@Html.DisplayNameFor(m=>m.Nama)</th>
               <th>@Html.DisplayNameFor(m=>m.MerkName)</th>
               <th>@Html.DisplayNameFor(m=>m.Harga)</th>
               <th>@Html.DisplayNameFor(m=>m.TanggalBid)</th>
               <th>@Html.DisplayNameFor(m=>m.BatasBid)</th>
               <th>Keterangan</th>
           </tr>
       </thead>
       <tbody>
           @foreach(var item in Model)
           {
                <tr>
                    @*<td>@Html.DisplayFor(m=>item.Id)</td>*@
                    <td>@Html.DisplayFor(m=>item.Nama)</td>
                    <td>@Html.DisplayFor(m=>item.MerkName)</td>
                    <td>Rp @Html.DisplayFor(m=>item.Harga)</td>
                    <td>
                        <span class="hidden-xs">@item.TanggalBid.ToString("MM/dd/yyyy")</span>
                        <span class="hidden-sm hidden-md hidden-lg">@item.TanggalBid.ToString("MM/dd/yyyy")</span>
                    </td>
                    <td>
                        <span class="hidden-xs">@item.BatasBid.ToString("MM/dd/yyyy")</span>
                        <span class="hidden-sm hidden-md hidden-lg">@item.BatasBid.ToString("MM/dd/yyyy")</span>
                    </td>
                    <td>
                        @Html.ActionLink("Modify", "Index", "Car")
                    </td>
                </tr>
           }
       </tbody>
   </table>
}
@Html.ActionLink("Create New Bid", "Index", "Car")
